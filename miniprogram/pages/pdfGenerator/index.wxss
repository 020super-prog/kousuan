/* pages/pdfGenerator/index.wxss */
.pdf-generator-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F5 0%, #F8F9FA 400rpx);
  padding: 32rpx;
  padding-bottom: 180rpx;
}

/* 页面头部 */
.page-header {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  text-align: center;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.header-content t-icon {
  display: inline-flex;
  align-items: center;
  vertical-align: middle;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-left: 12rpx;
  display: inline;
  vertical-align: middle;
}

.header-subtitle {
  font-size: 24rpx;
  color: #95A5A6;
  line-height: 1.5;
}

/* 配置区域 */
.config-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.config-item {
  margin-bottom: 32rpx;
}

.config-item:last-child {
  margin-bottom: 0;
}

.config-label {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.config-label t-icon {
  display: inline-flex;
  align-items: center;
  vertical-align: middle;
  flex-shrink: 0;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-left: 8rpx;
  display: inline;
  vertical-align: middle;
}

.label-hint {
  font-size: 22rpx;
  color: #95A5A6;
  margin-left: 8rpx;
}

/* 单选组 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.radio-group.horizontal {
  flex-direction: row;
}

.radio-item {
  flex: 1;
  min-width: 160rpx;
}

/* 题型网格 */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.category-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 28rpx 16rpx;
  background: #FFFFFF !important;
  border: 3rpx solid #E8E8E8 !important;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 未选中状态按压效果 */
.category-item:active:not(.category-item-active) {
  transform: scale(0.96);
  border-color: #4A90E2 !important;
  background: #F8F9FA !important;
}

/* ========== 选中状态样式 - 使用!important确保优先级 ========== */
.category-item-active {
  /* 核心背景色 - 使用蓝色渐变，符合WCAG AA标准 */
  background: linear-gradient(135deg, #1976D2 0%, #2196F3 50%, #42A5F5 100%) !important;
  background-color: #2196F3 !important; /* 降级方案 */
  
  /* 边框增强 */
  border: 3rpx solid #1976D2 !important;
  
  /* 立体阴影效果 */
  box-shadow: 
    0 6rpx 20rpx rgba(25, 118, 210, 0.4),
    0 0 0 4rpx rgba(33, 150, 243, 0.15),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.25) !important;
  
  /* 轻微上浮 */
  transform: translateY(-3rpx);
}

/* 选中状态按压反馈 */
.category-item-active:active {
  transform: translateY(-1rpx) scale(0.97);
  box-shadow: 
    0 4rpx 14rpx rgba(25, 118, 210, 0.35),
    0 0 0 4rpx rgba(33, 150, 243, 0.15) !important;
}

/* 选中标识徽章 */
.category-check-badge {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 36rpx;
  height: 36rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 10;
  animation: badge-pop 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.check-icon {
  color: #1976D2;
  font-size: 22rpx;
  font-weight: bold;
  line-height: 1;
}

@keyframes badge-pop {
  0% {
    transform: scale(0) rotate(-45deg);
    opacity: 0;
  }
  50% {
    transform: scale(1.15) rotate(5deg);
  }
  100% {
    transform: scale(1) rotate(0deg);
    opacity: 1;
  }
}

/* 图标样式 */
.category-item t-icon {
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

/* 选中状态图标 */
.category-item-active t-icon {
  transform: scale(1.2);
  filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.25));
}

/* 文字标签 */
.category-label {
  position: relative;
  z-index: 2;
  font-size: 24rpx;
  color: #2C3E50;
  margin-top: 10rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  letter-spacing: 0.5rpx;
}

/* 选中状态文字 - 白色高对比 */
.category-item-active .category-label {
  color: #FFFFFF !important;
  font-weight: 600;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.3);
  transform: scale(1.08);
}

/* 预览提示 */
.preview-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  gap: 8rpx;
}

.preview-hint t-icon {
  flex-shrink: 0;
}

.hint-text {
  font-size: 24rpx;
  color: #FF6B35;
  line-height: 1.5;
}

/* 操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  background: #FFFFFF;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.btn {
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s;
}

.btn::after {
  border: none;
}

.btn:active:not([disabled]) {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-primary {
  background: linear-gradient(135deg, #E74C3C 0%, #EC7063 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(231, 76, 60, 0.3);
}

.btn-generate {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}

.btn[disabled] {
  opacity: 0.6;
}

/* 使用说明 */
.instruction-section {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.instruction-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  gap: 8rpx;
}

.instruction-title t-icon {
  flex-shrink: 0;
}

.instruction-title text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2C3E50;
}

.instruction-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.instruction-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.instruction-index {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
  background: linear-gradient(135deg, #E74C3C 0%, #EC7063 100%);
  color: #FFFFFF;
  border-radius: 50%;
  font-size: 20rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.instruction-text {
  flex: 1;
  font-size: 24rpx;
  color: #95A5A6;
  line-height: 1.6;
  padding-top: 6rpx;
}
