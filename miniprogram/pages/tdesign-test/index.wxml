<!--pages/tdesign-test/index.wxml-->
<view class="container">
  <view class="title">TDesign 组件库测试页面</view>
  
  <!-- 按钮测试 -->
  <view class="section">
    <view class="section-title">按钮组件测试</view>
    <t-button theme="primary" size="large" bind:tap="onPrimaryClick">主要按钮</t-button>
    <t-button theme="light" size="medium" bind:tap="onLightClick">次要按钮</t-button>
    <t-button theme="danger" size="small" bind:tap="onDangerClick">危险按钮</t-button>
  </view>

  <!-- 输入框测试 -->
  <view class="section">
    <view class="section-title">输入框组件测试</view>
    <t-input 
      placeholder="请输入内容" 
      value="{{inputValue}}"
      bind:change="onInputChange"
      clearable
    />
    <view class="input-result">输入内容: {{inputValue}}</view>
  </view>

  <!-- 单元格测试 -->
  <view class="section">
    <view class="section-title">单元格组件测试</view>
    <t-cell-group>
      <t-cell title="单元格标题1" note="说明文字" arrow />
      <t-cell title="单元格标题2" note="说明文字" arrow />
      <t-cell title="带图标" left-icon="home" arrow />
    </t-cell-group>
  </view>

  <!-- 图标测试 -->
  <view class="section">
    <view class="section-title">图标组件测试</view>
    <view class="icon-row">
      <t-icon name="home" size="48rpx" color="#0052D9" />
      <t-icon name="user" size="48rpx" color="#00A870" />
      <t-icon name="setting" size="48rpx" color="#E37318" />
      <t-icon name="star" size="48rpx" color="#ED7B2F" />
    </view>
  </view>

  <!-- 操作反馈 -->
  <view class="section">
    <view class="section-title">对话框与消息测试</view>
    <t-button theme="primary" bind:tap="showDialog">显示对话框</t-button>
    <t-button theme="success" bind:tap="showMessage">显示消息提示</t-button>
  </view>

  <t-dialog id="t-dialog" />
  <t-message id="t-message" />
</view>
