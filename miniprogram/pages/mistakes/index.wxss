/* pages/mistakes/index.wxss */
.mistakes-container {
  min-height: 100vh;
  background: #F8F9FA;
  padding-bottom: 180rpx;
}

/* 筛选栏 */
.filter-bar {
  background: #FFFFFF;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-tags {
  display: inline-flex;
  padding: 0 32rpx;
  gap: 16rpx;
}

.filter-tag {
  display: inline-block;
  padding: 12rpx 32rpx;
  background: #F8F9FA;
  color: #95A5A6;
  border-radius: 24rpx;
  font-size: 26rpx;
  transition: all 0.3s;
  white-space: nowrap;
}

.filter-tag.active {
  background: #4A90E2;
  color: #FFFFFF;
}

/* 错题列表 */
.mistakes-list {
  padding: 24rpx 32rpx;
}

.mistake-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.mistake-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.mistake-type {
  font-size: 22rpx;
}

.mistake-date {
  font-size: 24rpx;
  color: #95A5A6;
}

.mistake-content {
  margin-bottom: 20rpx;
}

.mistake-question {
  margin-bottom: 16rpx;
}

.question-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
}

.mistake-answer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.answer-item {
  display: flex;
  align-items: center;
}

.answer-label {
  font-size: 24rpx;
  color: #95A5A6;
  margin-right: 8rpx;
}

.answer-wrong {
  font-size: 28rpx;
  color: #E74C3C;
  text-decoration: line-through;
  font-weight: 600;
}

.answer-correct {
  font-size: 28rpx;
  color: #27AE60;
  font-weight: 600;
}

.mistake-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: 1rpx solid #E8E8E8;
  background: #FFFFFF;
}

.btn-retry {
  color: #4A90E2;
  border-color: #4A90E2;
}

.btn-master {
  color: #27AE60;
  border-color: #27AE60;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

/* 批量操作栏 */
.batch-actions {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 99;
}

.batch-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.select-all-label {
  display: flex;
  align-items: center;
}

.select-all-text {
  font-size: 28rpx;
  color: #2C3E50;
  margin-left: 8rpx;
}

.selected-count {
  font-size: 24rpx;
  color: #95A5A6;
}

.batch-btns {
  display: flex;
  gap: 16rpx;
}

.batch-btn {
  padding: 16rpx 32rpx;
  background: #4A90E2;
  color: #FFFFFF;
  border-radius: 24rpx;
  font-size: 26rpx;
  border: none;
}

.batch-btn-danger {
  background: #E74C3C;
}
