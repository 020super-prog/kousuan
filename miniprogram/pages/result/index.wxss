/* pages/result/index.wxss */
.result-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F4FD 0%, #F8F9FA 50%);
  padding: 48rpx 32rpx;
  padding-bottom: 120rpx;
}

/* 成绩展示 */
.score-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.score-circle {
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  animation: scaleIn 0.5s ease-out;
}

@keyframes scaleIn {
  from {
    transform: scale(0);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

.score-circle.excellent {
  background: linear-gradient(135deg, #27AE60 0%, #1E8449 100%);
}

.score-circle.good {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
}

.score-circle.need-improve {
  background: linear-gradient(135deg, #FF6B35 0%, #E55A2B 100%);
}

.score-number {
  font-size: 120rpx;
  font-weight: 700;
  color: #FFFFFF;
  line-height: 1;
}

.score-unit {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
}

.score-label {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2C3E50;
  margin-bottom: 8rpx;
}

.score-subtitle {
  font-size: 28rpx;
  color: #95A5A6;
}

/* 统计卡片 */
.stats-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.stat-row {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-info {
  display: flex;
  flex-direction: column;
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #95A5A6;
}

.stat-divider {
  width: 1rpx;
  height: 80rpx;
  background: #E8E8E8;
}

/* 鼓励卡片 */
.encourage-card {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE5CC 100%);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
  border: 2rpx solid #FF6B35;
}

.encourage-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.encourage-text {
  font-size: 28rpx;
  color: #2C3E50;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  margin-bottom: 32rpx;
}

/* 分享卡片 */
.share-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.share-tip {
  font-size: 28rpx;
  color: #95A5A6;
}

.share-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 32rpx;
  background: #E8F4FD;
  border-radius: 24rpx;
  border: none;
  font-size: 26rpx;
}

.share-text {
  color: #4A90E2;
  font-weight: 600;
}
