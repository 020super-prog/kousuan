/**app.wxss - 小学口算助手全局样式**/

/* ==================== 全局页面配置 ==================== */
page {
  background: #F8F9FA;
  font-family: -apple-system-font, "Helvetica Neue", Helvetica, sans-serif;
  color: #2C3E50;
  font-size: 28rpx;
  line-height: 1.6;
}

/* ==================== 主题色系定义 ==================== */
/* 主色调 - 智慧蓝 */
.color-primary {
  color: #4A90E2;
}
.bg-primary {
  background-color: #4A90E2;
}

/* 辅助色 - 活力橙 */
.color-secondary {
  color: #FF6B35;
}
.bg-secondary {
  background-color: #FF6B35;
}

/* 功能化色彩 */
.color-success {
  color: #27AE60;
}
.bg-success {
  background-color: #27AE60;
}

.color-danger {
  color: #E74C3C;
}
.bg-danger {
  background-color: #E74C3C;
}

.color-info {
  color: #3498DB;
}
.bg-info {
  background-color: #3498DB;
}

/* 中性色系 */
.color-text-primary {
  color: #2C3E50;
}
.color-text-secondary {
  color: #95A5A6;
}
.bg-light {
  background-color: #F8F9FA;
}

/* ==================== 通用布局 ==================== */
.container {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  min-height: 100vh;
  padding-bottom: 100rpx; /* 为底部导航留出空间 */
}

.page-container {
  padding: 32rpx;
  box-sizing: border-box;
}

/* ==================== 卡片样式 ==================== */
.card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.card-title-icon {
  margin-right: 16rpx;
}

/* ==================== 按钮样式 ==================== */
button {
  background: initial;
  border: none;
  padding: 0;
  margin: 0;
  font-size: inherit;
  line-height: inherit;
}

button:focus {
  outline: 0;
}

button::after {
  border: none;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
  box-sizing: border-box;
}

.btn-primary {
  background: #4A90E2;
  color: #FFFFFF;
}

.btn-primary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-secondary {
  background: #FF6B35;
  color: #FFFFFF;
}

.btn-secondary:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.btn-large {
  width: 100%;
  height: 88rpx;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.btn-medium {
  height: 72rpx;
  padding: 0 60rpx;
}

.btn-small {
  height: 56rpx;
  padding: 0 40rpx;
  font-size: 24rpx;
}

/* ==================== 文字样式 ==================== */
.title-large {
  font-size: 40rpx;
  font-weight: 700;
  color: #2C3E50;
}

.title-medium {
  font-size: 32rpx;
  font-weight: 600;
  color: #2C3E50;
}

.text-normal {
  font-size: 28rpx;
  color: #2C3E50;
}

.text-small {
  font-size: 24rpx;
  color: #95A5A6;
}

.text-bold {
  font-weight: 600;
}

/* ==================== 间距系统 ==================== */
.mt-8 { margin-top: 8rpx; }
.mt-16 { margin-top: 16rpx; }
.mt-24 { margin-top: 24rpx; }
.mt-32 { margin-top: 32rpx; }
.mt-48 { margin-top: 48rpx; }

.mb-8 { margin-bottom: 8rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }
.mb-32 { margin-bottom: 32rpx; }
.mb-48 { margin-bottom: 48rpx; }

.ml-8 { margin-left: 8rpx; }
.ml-16 { margin-left: 16rpx; }
.mr-8 { margin-right: 8rpx; }
.mr-16 { margin-right: 16rpx; }

.p-16 { padding: 16rpx; }
.p-24 { padding: 24rpx; }
.p-32 { padding: 32rpx; }

/* ==================== Flex布局 ==================== */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* ==================== 其他通用样式 ==================== */
.divider {
  height: 1rpx;
  background: #E8E8E8;
  margin: 24rpx 0;
}

.badge {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
  line-height: 1.5;
}

.badge-primary {
  background: rgba(74, 144, 226, 0.1);
  color: #4A90E2;
}

.badge-success {
  background: rgba(39, 174, 96, 0.1);
  color: #27AE60;
}

.badge-danger {
  background: rgba(231, 76, 60, 0.1);
  color: #E74C3C;
}