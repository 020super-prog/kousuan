/* custom-tab-bar/index.wxss */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
  z-index: 1000;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 8rpx 0;
  transition: all 0.3s;
}

.tab-bar-item:active {
  opacity: 0.7;
  transform: scale(0.95);
}

.tab-bar-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 4rpx;
  transition: all 0.3s;
}

.tab-bar-item-active .tab-bar-icon {
  transform: scale(1.1);
}

.tab-bar-text {
  font-size: 20rpx;
  line-height: 1.2;
  text-align: center;
  transition: all 0.3s;
}

.tab-bar-item-active .tab-bar-text {
  font-weight: 600;
}
